<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="DistanceIndicator" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@android:color/transparent</item>
        <item name="android:progressTint">@android:color/holo_blue_dark</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:max">255</item>
    </style>

    <style name="DistanceIndicatorLabel">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">25dp</item>
        <item name="android:text">un</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
